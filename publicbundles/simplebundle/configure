#!/bin/bash

target="i386-dbaf-softmmu"
bundle_path=$(pwd)

dbaf_src_path=""
dbaf_build_path=""
show_help="yes"

for opt do
  optarg=`expr "x$opt" : 'x[^=]*=\(.*\)'`
  case "$opt" in
  --help|-h) show_help="yes"
  ;;
  --dbaf-src-path=*) dbaf_src_path=`readlink -e "$optarg"`; show_help="no"
  ;;
  --dbaf-build-path=*) dbaf_build_path=`readlink -e "$optarg"`; show_help="no"
  ;;
  *) echo "ERROR: unknown option $opt"; show_help="yes"
  ;;
  esac
done

if test x"$show_help" = x"yes" ; then
cat << EOF
Usage: configure [options]
Options: [defaults in brackets after descriptions]

EOF
echo "Standard options:"
echo "  --help                  print this message"
echo "  --dbaf-src-path=PATH       path to DBAF source(must be specified)"
echo "  --dbaf-build-path=PATH       path to DBAF build (must be specified)"
echo ""
echo "Advanced options (experts only):"
echo ""
exit 1
fi

if [[ ! $dbaf_src_path ]] ; then
  echo
  echo "ERROR: Path to DBAF src does not exist. Please double check"
  exit
fi
if [[ ! $dbaf_build_path ]] ; then
  echo
  echo "ERROR: Path to DBAF build does not exist. Please double check"
  exit
fi
# Print info 
echo bundle path: $bundle_path
echo DBAF src path: $dbaf_src_path
echo DBAF build  path: $dbaf_build_path

config_h="config.h"
config_mak="config-bundle.mak"
test -f $config_h && mv $config_h ${config_h}~
echo "# Automatically generated by configure - do not modify" > $config_mak

echo "TARGET_DIR=$target" >> $config_mak
echo "DBAF_SRC_PATH=$dbaf_src_path" >> $config_mak
echo "DBAF_BUILD_PATH=$dbaf_build_path" >> $config_mak
echo "BUNDLE_NAME=simplebundle" >> $config_mak

echo "#define DBAF_SRC_HOME \"$dbaf_src_path\"" >> $config_h
echo "#define DBAF_BUILD_HOME \"$dbaf_build_path\"" >> $config_h
echo "#define BUNDLE_PATH \"$bundle_path\"" >> $config_h
